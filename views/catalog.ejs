<style>
html, body {
    height: 100%;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
}

.wrapper {
    display: flex;
    width: 100%;
    min-height: 100vh;
}

.sidebar {
    width: 80px;
    background-color: #ccc;
    position: relative;
	height: 260vh;
}

.container {
    flex: 1;
    max-width: 1200px;
    margin: 20px auto;
    padding: 20px;
}


.dark-mode {
    background-color: #222;
    color: white;
}

.carousel {
    width: 100%;
    overflow: hidden;
    white-space: nowrap;
}

.carousel-inner img {
    width: 100%;
    display: inline-block;
}

.button-container {
    margin-top: 20px;
}

.btn, a {
    padding: 10px 20px;
    background: orange; 
    color: white;
    text-decoration: none;
    border-radius: 5px;
}

a {
    color: orange; 
}

.btn:hover, a:hover {
    background: darkorange; 
}

.product-list {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
}

.product {
    border: 1px solid #ddd;
    padding: 10px;
    width: 200px;
    text-align: center;
}

.product img {
    max-width: 100%;
    height: auto;
}

</style>

<div class="wrapper">
    <div class="sidebar"></div> 

    <div class="container">
        <h1>Catalog</h1>
        <a href="/auth/index" class="btn">Main page</a>

        <form method="GET" action="/catalog">
            <input type="text" name="search" placeholder="Search by title">
            <select name="sort">
                <option value="">Sort by price</option>
                <option value="asc">Low to High</option>
                <option value="desc">High to Low</option>
            </select>
            <button type="submit">Search</button>
        </form>

        <div class="product-list">
            <% if (products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="product">
                        <h2><%= product.title %></h2>
                        <p>Price: <%= product.price %>тг</p>
                        <p><%= product.description %></p>
                        <a href="<%= product.link %>" target="_blank" class="btn">View Product</a> 
                    </div>
                <% }); %>
            <% } else { %>
                <p>No products found.</p>
            <% } %>
        </div>
    </div>

    <div class="sidebar"></div> 
</div>



